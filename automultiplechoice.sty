\newcommand{\AMC@marquebonne}[1]{%
\ifAMC@calibration%
  \ifAMC@couleur% calibration en couleurs
    \ifAMC@ensemble%
      \ifAMCformulaire@dedans%
        \AMC@caselettre{#1}{200,\the\AMCid@quest,\the\AMCrep@count}{0,255,0}%
      \else%
