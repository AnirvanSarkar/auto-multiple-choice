\AMCtok@max=#1
\ifnum\the\AMCtok@max<1
  \AMCtok@max=\csname #2@k\endcsname
\fi
\AMCtok@k=0
%
{\loop
    \advance\AMCtok@k by 1
    \the\csname #2@\romannumeral\AMCtok@k\endcsname
\ifnum\AMCtok@k<\AMCtok@max\repeat}%
}
