% \begin{macro}{\AMC@binaryCode}
%   The command |\AMC@binaryCode|\marg{options}\marg{n} prints
%   boxes to represent the number \meta{n} in its binary
%   form. Options from \meta{options} include:
%   \begin{itemize}
%   \item[|ndigits=|\meta{ndigits}] for the number of digits to be shown.
%   \item[|id=|\meta{id}] for an ID of the number role (1 for the
%     student number, 2 for the page number, 3 for the checking
%     value).
%   \item[|hsep=|\meta{hsep}] for the space between boxes.
%   \item[|style=|\meta{style}] for some box style options.
%   \end{itemize}
%   |\AMCbin@one| and |\AMCbin@zero| print individual
%   digit-boxes.
%
%   For example, |\AMC@binaryCode{ndigits=12}{367}| shows $367=000101101111_2$
%   using 12 boxes:
%   \begin{center}
%     \makeatletter\AMC@binaryCode{ndigits=12}{367}\makeatother
%   \end{center}
%
%    \begin{macrocode}
\newtoks\AMCbin@sequence
\newcount\AMCbin@number
\newcount\AMCbin@digit
\newcount\AMCbin@id
\newcount\AMCbin@did
\newcount\AMCbin@ndigits
\newdimen\AMCbin@hsep
\define@key{AMCbin}{ndigits}{\AMCbin@ndigits=#1}
\define@key{AMCbin}{id}{\AMCbin@id=#1}
\define@key{AMCbin}{hsep}{\AMCbin@hsep=#1}
\define@key{AMCbin}{style}[]{\def\AMCbin@style{#1}}
\def\AMCbin@one{%
  \ifnum\AMCbin@did>\z@%
  \hspace{\AMCbin@hsep}%
  \fi%
  \advance\AMCbin@did\@ne%
  \ifnum\AMCbin@id>0%
  \AMC@answerBox@{}{\AMC@checkedbox}{1}{chiffre:\the\AMCbin@id,\the\AMCbin@did}%
  \else%
  \AMC@answerBox@{}{\AMC@checkedbox}{1}{}%
  \fi}
\def\AMCbin@zero{%
  \ifnum\AMCbin@did>\z@%
  \hspace{\AMCbin@hsep}%
  \fi%
  \advance\AMCbin@did\@ne%
  \ifnum\AMCbin@id>0%
  \AMC@answerBox@{}{}{1}{chiffre:\the\AMCbin@id,\the\AMCbin@did}%
  \else%
  \AMC@answerBox@{}{}{1}{}%
  \fi}
\newcommand{\AMC@binaryCode}[2]{%
\setkeys{AMCbin}{ndigits=1,hsep=0pt,style}\setkeys{AMCbin}{#1}%
\AMCbin@did=\z@%
{\AMCboxDimensions{shape=square,size=.32cm,down=0pt,rule=.2pt,cross=false}\expandafter\AMCboxDimensions\expandafter{\AMCbin@style}\AMCbin@sequence={}\AMCbin@number=#2\relax%
\AMCbin@digit=\z@%
\loop%
\ifnum\AMCbin@number>\z@%
\advance\AMCbin@digit\@ne%
\ifodd\AMCbin@number\AMCbin@sequence=\expandafter{\expandafter\AMCbin@one\the\AMCbin@sequence}%
\else\AMCbin@sequence=\expandafter{\expandafter\AMCbin@zero\the\AMCbin@sequence}\fi%
\divide\AMCbin@number\tw@%
\repeat%
\loop\relax%
\ifnum\AMCbin@digit<\AMCbin@ndigits\advance\AMCbin@digit\@ne%
\AMCbin@sequence=\expandafter{\expandafter\AMCbin@zero\the\AMCbin@sequence}\repeat%
\the\AMCbin@sequence%
\ifnum\AMCbin@digit>\AMCbin@ndigits\PackageError{automultiplechoice}{Too low AMC@NCB value (got \the\AMCbin@ndigits, but needs \the\AMCbin@digit)}{Number of available digits is \the\AMCbin@ndigits, but needs \the\AMCbin@digit}\fi%
}}
%    \end{macrocode}\end{macro}
% The commands |\AMCbin@begin| and |\AMC@binaryBoxes| are now unused
% and are defined for backward compatibility.
%    \begin{macrocode}
\def\AMCbin@begin#1{\setkeys{AMCbin}{id=#1}}
\newcommand{\AMC@binaryBoxes}[2][1]{%
\AMC@binaryCode{ndigits=#1}{#2}%
}
%    \end{macrocode}
